@model ConsumeWebApi.Models.Saldo

@{
    ViewBag.Title = "Agregar Saldo";
}

<h2>Agregar Saldo</h2>


@using (Html.BeginForm("RegistrarSaldo", "Wallet")) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Saldo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.ingreso, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ingreso, new { htmlAttributes = new { @class = "form-control"  } })
                @Html.ValidationMessageFor(model => model.ingreso, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" name="agregar" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
